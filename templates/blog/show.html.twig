{% extends 'base.html.twig' %}

{% block body %}
	<article>
		<h2>{{ article.titre }}</h2>
		<div class="metadata">Ecrit le
			{{ article.dateCreation | date('d/m/Y')}}
			à
			{{ article.dateCreation | date('H:i')}}
			dans la catégorie:{{article.categorie.nomCategorie}}</div>
		<div class="content">
			<img src="{{ article.image }}" alt="{{ article.titre }}">
			{{ article.contenu | raw }}
			<span>| Auteur:
			</span>
			{{ article.auteur }}
			{# MotsCles #}
			<label for="motsCles">
				| MotsCles:
			</label>
			<select name="motsCles" id="">
				{% for motcles in article.motscles %}
					<option>
						{{ motcles.nomMotCles }}
					</option>
				{% endfor %}
			</select>
		</div>
	</article>
{% endblock %}
