{% extends "base.html.twig" %}

{% form_theme formArticle 'bootstrap_4_layout.html.twig'%}
{% block body %}
	<h2>
		{%  if editMode %}
			Modifier l'Article
		{% else %}
			Cr√©ation d'un Article
		{% endif %}
	</h2>
	{{form_start(formArticle)}}

	{{ form_row(formArticle.titre, {'attr':{'placeholder': "Titre de l'article"}})}}
	{{ form_row(formArticle.categorie)}}
	{{ form_row(formArticle.image, {'attr':{'placeholder': "Image de l'article"}})}}
	{{ form_row(formArticle.contenu,{ 'attr':{'placeholder': "Contenu de l'article"}})}}
	{{ form_row(formArticle.auteur, {'attr':{'placeholder': "Auteur de l'article"}})}}

	<button type="submit" class="btn btn-info">
		{%  if editMode %}
			Souvgarder les modifications
		{% else %}
			Ajouter nouveau Article
		{% endif %}
	</button>
	{{form_end(formArticle)}}
{% endblock %}
